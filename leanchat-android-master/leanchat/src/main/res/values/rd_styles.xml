<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RedPacketIconStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="RedPacketGreetingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_toRightOf">@id/iv_money_icon</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RedPacketCheckStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBaseline">@id/iv_money_icon</item>
        <item name="android:layout_below">@id/tv_money_greeting</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_toRightOf">@id/iv_money_icon</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RedPacketSponsorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="RedPacketSponsorIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="horizontal_slide" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>

    <style name="AnimFade2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/lc_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/lc_slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/lc_slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/lc_slide_in_from_left</item>
    </style>

</resources>