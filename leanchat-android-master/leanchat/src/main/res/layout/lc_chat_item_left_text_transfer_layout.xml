<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transfer_layout"
    android:layout_width="210dp"
    android:layout_height="90dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/lc_transfer_chatfrom_bg">

    <ImageView
        android:id="@+id/iv_money_icon"
        style="@style/RedPacketIconStyle"
        android:src="@drawable/lc_transfer_icon" />

    <TextView
        android:id="@+id/tv_money_greeting"
        style="@style/RedPacketGreetingStyle"
        android:text="@string/transfer_msg_received" />

    <TextView
        android:id="@+id/tv_transfer_amount"
        style="@style/RedPacketCheckStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_transfer_sponsor_name"
            style="@style/RedPacketSponsorStyle"
            android:text="@string/chat_bottom_transfer" />

        <ImageView style="@style/RedPacketSponsorIconStyle" />
    </RelativeLayout>
</RelativeLayout>
