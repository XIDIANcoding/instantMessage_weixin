<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/liuyan_user_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言者"
            android:textColor="#5887ec"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/liuyan_user_to_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/liuyan_user_item"
            android:text=""/>

        <TextView
            android:id="@+id/liuyan_receiveruser_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/liuyan_user_to_user"
            android:text=""
            android:textColor="#5887ec"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView

        android:id="@+id/liuyan_content_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hahahhaha"/>



</LinearLayout>